pipeline{
    //pre-build
    agent(node-1){
        label 'node1'
    }
    // if added env inside the stage then only that particular stage its accesable
    environment {
        learning = 'Jenkins'
    }
    options {
        timeout(time: 5, unit: 'SECONDS') 
    }
    //build
    stages{
        stage('build'){
            environment {
                need= 'ansible'
            }
            steps{
                script{
                    sh """
                    echo "building jenkins file 14/1/26"
                    echo $learning
                    echo $need
                    SLEEP 10
                    env
                    """
                } 
            }
        }
        stage('test'){
            steps{
                echo "testing"
            }
        }
        stage('deploy'){
            steps{
                echo "deploying"
            }
        }
    }
    //post build
    post{
        always{
            cleanWs()
        }
        success{
            echo "pass"
        }
        failure{
            echo "fail"
        }
        aborted{
            echo "pipeline is aborted"
        }
    }

}

 